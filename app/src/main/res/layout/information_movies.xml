<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <ImageView android:layout_width="106dp" android:layout_height="119dp" android:id="@+id/img"
               app:srcCompat="@mipmap/ic_launcher"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="40dp" android:layout_marginTop="4dp"
               app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_width="193dp" android:layout_height="61dp" android:id="@+id/name"
              tools:text="arrival" android:layout_marginTop="4dp"
              app:layout_constraintTop_toBottomOf="@+id/img" app:layout_constraintStart_toStartOf="parent"
              android:gravity="center"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
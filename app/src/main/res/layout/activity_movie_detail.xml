<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"
            app:title="@string/app_name" android:textAlignment="center"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:ignore="MissingConstraints"/>

    <ProgressBar android:layout_width="124dp"
                 android:layout_height="104dp"
                 android:layout_centerInParent="true"
                 android:indeterminate="true"
                 android:id="@+id/loading"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginEnd="8dp"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="8dp"
                 android:layout_marginTop="376dp"
                 app:layout_constraintTop_toTopOf="@+id/toolbar"
                 app:layout_constraintHorizontal_bias="0.498"
                 android:layout_marginBottom="8dp"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintVertical_bias="0.0"/>

    <ImageView android:layout_width="158dp"
               android:layout_height="144dp"
               android:id="@+id/postImg"
               app:srcCompat="@mipmap/ic_launcher"
               app:layout_constraintStart_toStartOf="parent"
               android:transitionName="@string/image_movie"
               android:layout_marginStart="144dp"
               android:layout_marginTop="84dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="8dp"
               app:layout_constraintHorizontal_bias="0.92"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/title"
              app:layout_constraintEnd_toStartOf="@+id/postImg"
              android:layout_marginEnd="164dp"
              android:layout_marginTop="100dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              app:layout_constraintHorizontal_bias="0.0"
              android:id="@+id/title"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/runtime"
              app:layout_constraintEnd_toStartOf="@+id/postImg"
              android:layout_marginEnd="164dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              app:layout_constraintHorizontal_bias="0.0"
              android:id="@+id/runtime"
              app:layout_constraintTop_toBottomOf="@+id/title"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/release_date"
              app:layout_constraintEnd_toStartOf="@+id/postImg"
              android:layout_marginEnd="164dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintTop_toBottomOf="@+id/runtime"
              android:id="@+id/releasedate"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/vote_average"
              app:layout_constraintEnd_toStartOf="@+id/postImg"
              android:layout_marginEnd="164dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintTop_toBottomOf="@+id/releasedate"
              android:id="@+id/voteaverage"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/vote_count"
              app:layout_constraintEnd_toStartOf="@+id/postImg"
              android:layout_marginEnd="164dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintTop_toBottomOf="@+id/voteaverage"
              android:id="@+id/votecount"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/over_view"
              android:id="@+id/overview"
              android:layout_marginTop="264dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              app:layout_constraintHorizontal_bias="0.485" android:layout_marginStart="8dp"/>


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reviews"
            android:text="@string/see_reviews"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recommendations"
            android:text="@string/see_recommendations"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <Button android:layout_width="195dp"
            android:layout_height="43dp"
            android:text="@string/tentar_novamente"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/again"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.479"/>
</androidx.constraintlayout.widget.ConstraintLayout>

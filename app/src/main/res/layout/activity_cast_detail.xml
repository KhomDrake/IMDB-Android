<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/imdb_background_text2"
        tools:context=".ui.movies.castdetail.CastDetailActivity">

    <TextView
            tools:text="Robert Downey Jr"
            android:layout_width="match_parent"
            android:textColor="@color/imdb_text"
            android:textAlignment="center"
            android:textSize="@dimen/size_title_home_movies"
            android:layout_height="wrap_content"
            android:id="@+id/cast_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView android:layout_width="156dp"
               android:layout_height="156dp"
               android:id="@+id/posterImage"
               app:srcCompat="@mipmap/ic_launcher"
               android:transitionName="@string/image_movie"
               android:layout_marginTop="8dp"
               app:layout_constraintTop_toBottomOf="@+id/cast_title"
               android:layout_marginEnd="8dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               android:contentDescription="@string/image_movie"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Birth Date: 05/09/1997"
            android:id="@+id/vote_count"
            android:textSize="18sp"
            android:textColor="@color/imdb_text"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="95dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
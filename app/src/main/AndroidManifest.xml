<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.imdb">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:name=".di.TheMovieDbApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            tools:ignore="GoogleAppIndexingWarning">
        <uses-library android:name="android.test.runner"
                      android:required="false"/>
        <activity android:name="com.example.imdb.ui.movies.cast.CastActivity"/>
        <activity android:name="com.example.imdb.ui.tv.hometv.HomeTvActivity"/>
        <activity android:name="com.example.imdb.ui.movies.homemovies.HomeMoviesActivity"/>
        <activity android:name=".ui.home.HomeAppActivity"/>
        <activity android:name="com.example.imdb.ui.movies.moviereview.ReviewActivity"/>
        <activity android:name="com.example.imdb.ui.movies.recommendation.RecommendationActivity"/>
        <activity
                android:name="com.example.imdb.ui.movies.moviedetail.MovieDetailActivity"
                android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>